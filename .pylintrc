[MASTER]
init-hook='import sys; sys.path.append("src")'

[MESSAGES CONTROL]
disable=missing-docstring,invalid-name,too-few-public-methods

[FORMAT]
max-line-length=88

[VARIABLES]
dummy-variables-rgx=_+$|(_[a-zA-Z0-9_]*[a-zA-Z0-9]+?$)|dummy|^ignored_|^unused_

[DESIGN]
max-args=10
max-locals=15
max-returns=6
max-branches=12
max-statements=50
